<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:gravity="center|left">

            <TextView
                android:id="@+id/TvColCheckoutAnatomiNama2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAMA"
                android:textSize="17dp"
                android:textColor="@color/md_purple_700"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgColCheckoutAnatomiHapus"
                android:layout_marginLeft="3dp"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@drawable/img_button_hapus"/>

            <ImageView
                android:id="@+id/imgColCheckoutAnatomiScreenshoot"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_action_camera"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>